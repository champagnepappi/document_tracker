<% provide(:title, "Signup")%>
<h1>Sign up here</h1>
 <%= form_for(@user) do |f| %>
     <%= render 'shared/error_messages' %>
     <%=f.label :username  %>
     <%= f.text_field :name %><br>

     <%= f.label :email %>
     <%= f.email_field :email %><br>

     <%= f.label :password %>
     <%= f.password_field :password %><br>

     <%= f.label :password_confirmation %>
     <%= f.password_field :password_confirmation %><br>

     <%= f.submit "Signup" %>
     
     <% end %>
