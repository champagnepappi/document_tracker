<% provide(:title, "users")%>
<h1>All users</h1>
<table>
    <% @users.each do |user| %>
        <tr>
            <td> <%= link_to user.name, user %></td>
            <% if !current_user?(user)%>
            <td> <%= link_to "delete", user, method: :delete, data: {confirm: "Are you sure you want to delete this user?"} %>
            <% end %>
    </tr>
<% end %>
</table>
