<% provide(:title, "Documents")%>
<table>
    <div class="row">
        <div class="medium-6 columns medium-offset-0">
            <h1> All Documents ( <%= @documents.count %> )</h1>
            <div class="top-bar-right">
                <%= form_tag documents_path, method: 'get' do %>
                    <%= text_field_tag :search, params[:search] %>
                    <%= submit_tag "Search", name: nil %>
                    <% end %>
                </div>
        </div>
    </div>

    <ul class="dropdown menu" data-dropdown-menu>

        <li> <%= link_to "Departments", '#' %>
        <ul class="menu">
            <li> <%= link_to "Success",documents_path(department: "Success") %></li>
            <li> <%= link_to "Life",documents_path(department: "Life") %></li>
            <li> <%= link_to "Sports",documents_path(department: "Sports") %></li>
            <li> <%= link_to "Finance",documents_path(department: "Finance") %></li>
            <li> <%= link_to "Inspiration",documents_path(department: "Inspiration") %></li>
            <li> <%= link_to "Business",documents_path(department: "Business") %></li>
        </ul>
        </li>
    </ul>
    <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Department</th>
        <th></th>
    </tr>

    <% @documents.each do |doc| %>
        <tr>
            <td> <%= link_to doc.title, doc %></td>
            <td> <%= doc.author %></td>
            <td> <%= doc.department %></td>
            <td> <%= link_to "delete", doc, method: :delete, data: {confirm: "Are you sure you want to delete this document???"} %></td>
        </tr>
    <% end %>
</table>
