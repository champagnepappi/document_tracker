<% provide(:title, "Documents")%>
<table>
    <div class="row">
        <div class="medium-6 columns">
            <h1> All Documents ( <%= @documents.count %> )</h1>
        </div>
        <div class="medium-6 columns">
            <%= form_tag documents_path, method: 'get' do %>
                <%= text_field_tag :search, params[:search],placeholder: "search by title,author,tag or department" %>
                <%= submit_tag "Search", name: nil, class: "button" %>
            <% end %>
        </div>
    </div>

    <ul class="dropdown menu" data-dropdown-menu>

        <li> <%= link_to "Departments", '#',style: "color: #3A581D " %>
        <ul class="menu">
            <li> <%= link_to "Success",documents_path(department: "Success"),style: "color: #3A581D "  %></li>
            <li> <%= link_to "Life",documents_path(department: "Life") ,style: "color: #3A581D " %></li>
            <li> <%= link_to "Sports",documents_path(department: "Sports")  ,style: "color: #3A581D "  %></li>
            <li> <%= link_to "Finance",documents_path(department: "Finance")  ,style: "color: #3A581D "  %></li>
            <li> <%= link_to "Inspiration",documents_path(department: "Inspiration")  ,style: "color: #3A581D " %></li>
            <li> <%= link_to "Business",documents_path(department: "Business") ,style: "color: #3A581D "  %></li>
        </ul>
        </li>
    </ul>
    <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Department</th>
        <th>Tag</th>
        <th></th>
    </tr>

    <% @documents.each do |doc| %>
        <tr>
            <td> <%= link_to doc.title, doc %></td>
            <td> <%= doc.author %></td>
            <td> <%= doc.department %></td>
            <td> <%= doc.tag %></td>
            <td> <%= link_to "delete", doc, method: :delete, data: {confirm: "Are you sure you want to delete this document???"} %></td>
        </tr>
    <% end %>
</table>
