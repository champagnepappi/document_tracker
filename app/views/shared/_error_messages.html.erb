<% if @user.errors.any? %>
    <div id="error_message">
        <div>
            Your input contains <%= pluralize(@user.errors.count, "error") %>
    </div>
    <ul>
        <% @user.errors.full_messages.each do |error| %>
            <li> <%= error %></li>
        <% end %>
    </ul>
    </div>
<% end %>
